{
  "manifest_version": 3,
  "name": "whatmedoin",
  "description": "",
  "version": "1.0",
  "permissions": ["webNavigation", "storage", "tabs"],
  "host_permissions": [
    "http://localhost/*",
    "https://*.up.railway.app/*",
    "https://*.frixaco.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "whatmedoin@frixaco.com"
    }
  }
}
